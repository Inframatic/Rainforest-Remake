<h1>Create a product</h1>
<%= link_to "Back to Home", products_url %>

<%= form_for @product do |f| %>
  <p>
    <%= f.label "name" %><br>
    <%= f.text_field "name" %>
  </p>
  <p>
    <%= f.label "description" %><br>
    <%= f.text_field "description" %>
  </p>
  <p>
    <%= f.label "price_in_cents" %><br>
    <%= f.text_field "price_in_cents" %>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>